@model IEnumerable<WebAppMVCComboCascade.Models.Regione>

@{
    ViewData["Title"] = "Lista delle regioni d'Italia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista delle regioni d'Italia</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isAutonoma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumAbitanti)
            </th>
            <th>
                Operazioni
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isAutonoma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumAbitanti)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
